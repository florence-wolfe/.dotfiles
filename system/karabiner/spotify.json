{
  "title": "Spotify Controls",
  "rules": [
    {
      "description": "Toggle Spotify Playback",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/etc/profiles/per-user/frankrobert/bin/spt pb -t"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Previous Track",
      "manipulators": [
        {
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/etc/profiles/per-user/frankrobert/bin/spt pb -p"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Next Track",
      "manipulators": [
        {
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/etc/profiles/per-user/frankrobert/bin/spt pb -n"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Volume Down",
      "manipulators": [
        {
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_down"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Volume Up",
      "manipulators": [
        {
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option",
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "volume_up"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
